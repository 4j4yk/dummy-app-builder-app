# Mage-OS / Magento REST base URL (recommended form):
#   https://<your-domain>/rest/<store_code>/V1
# Example:
#   https://example.local/rest/all/V1
COMMERCE_BASE_URL=https://your-mageos-domain/rest/all/V1

# Commerce access token (Integration token preferred; Admin token also works for POC)
COMMERCE_ACCESS_TOKEN=REPLACE_ME

# Where to forward orders (for this POC, keep default to local dummy target)
TARGET_URL=http://localhost:3000/target/orders

# Polling frequency (ms). Set to 0 to disable auto-polling and use manual endpoint.
POLL_INTERVAL_MS=15000

# Server port
PORT=3000
